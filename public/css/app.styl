@import 'animation'

$yellow 	= #fcc954
$blue 		= #5574cf
$red 		= #c4162f

body
	padding						5%
	background-color 			rgba(0,0,0,.85)

header
	overflow 					visible
	position 					relative
	height 						100px
	width 						100%
	margin-bottom 				20px

h1
	float						left
	width						45%
	height 						100%
	background 					url(../img/fartcharade.png) no-repeat left center
	-webkit-background-size		100% auto
	text-indent					-999%

div.charade
	z-index 					2
	position 					absolute
	top 						-50px
	right 						0
	width						50%
	height 						200px
	background 					url(../img/charade.png) no-repeat right center
	-webkit-background-size  	auto 100%


div.charade.rotate
	-webkit-animation			rotate 4s infinite
	-moz-animation				rotate 4s infinite
	-ms-animation				rotate 4s infinite


div.poop_wrapper
	position 					absolute
	right 						0
	height 						60%
	width 						30%
	top 						15%
	right 						12%

div.poop
	position				absolute
	width					100%
	height 					100%
	background 				url(../img/poop.png) no-repeat center center
	-webkit-transform		scale(1.75)
	-webkit-transition		all .4s

div.poop.pooped
	-webkit-transform		scale(2.5)
	-webkit-transition		none
	-webkit-animation		rumble .4s infinite
	-moz-animation			rumble .4s infinite
	-ms-animation			rumble .4s infinite

h3
	margin-bottom 					10px

div.latest_farters
	font-size 						175%
	ul
		list-style-type 			none
		margin-left 				0
	li 
		overflow 					hidden
		margin-bottom 				15px
		line-height 				130%
		background-color 			$red
		-webkit-border-radius 		5px 
		padding 					10px
		color 						#fff
		a
			color 					$yellow
	li:nth-child(odd)
		background-color 			$blue
		a
			color 					$yellow
	img
		margin-right 				15px
		float 						left
		width 						20%
		height 						auto
		-webkit-border-radius 		5px 
	p
		width 						75%

ul.all_fart_sounds
	display 						none

audio
	position 						absolute
	top 							10
	right 							10
	display 						none
	height 							100px

.well
	background-color 				$yellow
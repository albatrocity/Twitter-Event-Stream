@import 'animation'

$yellow 	= #fcc954
$blue 		= #5574cf
$red 		= #c4162f
$gray 		= rgba(0,0,0,.85)

body
	padding						5%
	background-color 			$gray

header
	overflow 					visible
	position 					relative
	height 						100px
	width 						100%
	margin-bottom 				20px

h1
	float						left
	width						45%
	height 						100%
	background 					url(../img/fartcharade.png) no-repeat left center
	-webkit-background-size		100% auto
	-moz-background-size		100% auto
	text-indent					-999%

h2
	width 						50%
	color 						#fff
	line-height 				120%
	margin-bottom 				20px
	a
		color 					$yellow
	a:hover
		color 					$red

h3
	margin-bottom 					10px

div.tweets
	font-size 						175%
	ul
		list-style-type 			none
		margin-left 				0
	li 
		overflow 					hidden
		margin-bottom 				15px
		line-height 				130%
		background-color 			$red
		-webkit-border-radius 		5px
		-moz-border-radius 			5px
		padding 					10px
		color 						#fff
		a
			color 					$yellow
	li:nth-child(odd)
		background-color 			$blue
		a
			color 					$yellow

	img
		margin-right 				15px
		float 						left
		width 						20%
		height 						auto
		-webkit-border-radius 		5px 
		-moz-border-radius 			5px
		border-radius 				5px
	p
		width 						75%

.well
	overflow 						hidden
	background-color 				$yellow
	ul
		overflow 					hidden

#ios-ok
	margin-right 					30px

.modal
	width 							300px
	padding 						30px
	background-color 				$yellow
	margin-left 					-200px
	p
		font-size 					130%
		line-height					140%
	h3
		font-size 					170%
		color 						$red
	input
		display 					block
		width 						90%
		padding 					5%
		font-size 					150%
		color 						$gray